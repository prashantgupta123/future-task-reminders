<section class="dashboard centered">
  <h2>Sign in to Task Reminders</h2>
  <p class="subtitle">Access your reminder dashboard.</p>

  {{#if error}}
    <div class="alert alert-error">
      {{error}}
    </div>
  {{/if}}

  <section class="card" style="max-width: 420px; margin: 0 auto;">
    <form method="POST" action="/auth/login" class="task-form">
      <div class="form-row">
        <label for="email">Email<span class="required">*</span></label>
        <input
          type="text"
          id="email"
          name="email"
          value="{{form.email}}"
          required
        />
      </div>

      <div class="form-row">
        <label for="password">Password<span class="required">*</span></label>
        <input
          type="password"
          id="password"
          name="password"
          required
        />
      </div>

      <div class="form-actions">
        <button type="submit" class="btn-primary">Login</button>
      </div>
    </form>

    <p class="small-muted" style="margin-top: 0.75rem; font-size: 0.8rem;">
      Don't have an account?
      <a href="/auth/register" class="btn-link">Register</a>
    </p>
  </section>
</section>


